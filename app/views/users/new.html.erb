<h1>Welcome new user: Please sign up!</h1>

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email, 'Email: ' %>
    <%= f.text_field :email, :size => 50 %>
  </div>
  <div class="actions"><%= f.submit "Sign Up" %></div>
<% end %>