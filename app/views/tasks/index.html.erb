<h1>Task list for: <%= current_user.email %></h1>

  <ul>
  <% @tasks.each do |task| %>
    <li><%= task.title %>
      <% if task.description.present? %> - <%= task.description %><% end %><% if task.due_on %><%= task.due_on %><% end %></li>
  <% end %>
  </ul>

<%= link_to 'New task', new_task_path %>