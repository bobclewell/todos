<h1>Task list for: <%= current_user.email %></h1>
<em>Drag to re-order. When done click completed.</em>

  <ul id="tasks" data-update-url="<%= sort_tasks_url %>">
  <% @tasks.each do |task| %>
    <%= content_tag_for :li, task do %>
      <span class="handle">drag</span>
      <%= task.title %>
      <% if task.description.present? %> - <em><%= task.description %></em><% end %><% if task.due_on %><span class="due-date"><%= task.due_on %></span><% end %>
      <%= link_to 'completed', "completed/#{task.id}", { :class => 'completed' } %>
    <% end %>
  <% end %>
  </ul>

<%= link_to 'New task', new_task_path, :class => 'btn' %>